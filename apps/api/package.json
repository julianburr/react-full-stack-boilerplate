{
  "name": "@boilerplate/app-api",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "test": "npm run build && tsc && tsc-alias && c8 node --test -r ts-node/register \"test/**/*.ts\"",
    "start": "npm run build && fastify start -l info dist/app.js",
    "build": "pnpm clean && tsc && tsc-alias && pnpm sentry:upload-sourcemaps",
    "watch": "pnpm clean && tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "dev": "pnpm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm:watch\" \"pnpm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "sentry:upload-sourcemaps": "tsx scripts/sentry-upload-sourcemaps.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clerk/backend": "^2.27.1",
    "@clerk/fastify": "^2.6.10",
    "@fastify/autoload": "^6.0.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/sensible": "^6.0.0",
    "@logtail/pino": "^0.5.7",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^10.32.0",
    "camelcase-keys": "^10.0.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.4.1",
    "fastify-plugin": "^5.0.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.7",
    "stripe": "^20.0.0",
    "twilio": "^5.10.7"
  },
  "devDependencies": {
    "@julianburr/eslint-config": "workspace:*",
    "@julianburr/prettier-config": "workspace:*",
    "@julianburr/secrets": "workspace:*",
    "@types/node": "^24.0.8",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.31.8",
    "fastify-tsconfig": "^3.0.0",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2"
  }
}
