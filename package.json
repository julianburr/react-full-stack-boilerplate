{
  "name": "react-full-stack-boilerplate",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint": "turbo run lint",
    "lint:staged": "lint-staged && turbo run lint:staged --concurrency=1",
    "typecheck": "turbo run typecheck",
    "pulumi:up": "cd infrastructure && pulumi up",
    "pulumi:preview": "cd infrastructure && pulumi preview",
    "pulumi:destroy": "cd infrastructure && pulumi destroy"
  },
  "devDependencies": {
    "@julianburr/eslint-config": "workspace:*",
    "@julianburr/prettier-config": "workspace:*",
    "@pulumi/cloudflare": "^6.0.0",
    "@pulumi/pulumi": "^3.0.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "lint-staged": {
    "**/*.{md,mdx,json,yml}": "prettier --write"
  },
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402"
}
